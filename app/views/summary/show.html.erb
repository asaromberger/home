<h1><%= @title %></h1>

<table>

<thead>
<tr>
<th>Account</th>
<% @years.each do |year| %>
	<th><%= year %></th>
<% end %>
</tr>
</thead>

<tbody>
<% @accounts.each do |id, values| %>
	<tr>
	<td><%= values['name'] %></td>
	<% @years.each do |year| %>
		<th><%= number_with_precision(values[year], precision: 2) %></th>
	<% end %>
	</tr>
<% end %>
</tbody>

</table>
