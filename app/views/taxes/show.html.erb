<h1><%= @title %></h1>

<table>

<thead>
<tr>
<th>Date</th>
<th>+/-</th>
<th>What</th>
<th>Amount</th>
</tr>
</thead>

<tbody>
<% @items.each do |item| %>
	<tr>
	<td><%= item.date %></td>
	<td><%= item.pm %></td>
	<td><%= item.what.what %></td>
	<td><%= item.amount %></td>
	</tr>
<% end %>
</tbody>

</table>

<h3>Summary</h3>

<table>

<thead>
<tr>
<th>What<th>
<th>Amount<th>
</tr>
</thead>

<tbody>
<% @summary.each do |what, amount| %>
	<tr>
	<td><%= what %></td>
	<td><%= amount %></td>
	</tr>
<% end %>
</tbody>

</table>
