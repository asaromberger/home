<h1><%= @title %></h1>

<%= link_to 'New Map', new_what_path %>

<div class='clearfix'><p>&nbsp;</p></div>

<table table-bordered>

<thead>
<tr>
<th>What</th>
<th>Type</th>
<th>Category</th>
<th>Sub Category</th>
<th>Tax</th>
<th>Edit</th>
<th>Delete</th>
</tr>
</thead>

<tbody>
<% @whats.each do |what| %>
	<tr>
	<td><%= what.what %></td>
	<td><%= what.category.ctype %></td>
	<td><%= what.category.category %></td>
	<td><%= what.category.subcategory %></td>
	<td><%= what.category.tax %></td>
	<td><%= link_to 'Edit', edit_what_path(what.id) %></td>
	<td><%= link_to 'Delete', what_path(what.id), method: :delete, data: {confirm: "Delete #{what.what}?"} %></td>
	</tr>
<% end %>
</tbody>

</table>
