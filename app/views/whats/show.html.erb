<h1><%= @title %></h1>

<table>

<thead>
<tr>
<th>Date</th>
<th>+/-</th>
<th>Check</th>
<th>Amount</th>
</tr>
</thead>

<tbody>
<% @items.each do |item| %>
	<tr>
	<th><%= item.date %></th>
	<th><%= item.pm %></th>
	<th><%= item.checkno %></th>
	<th><%= number_with_precision(item.amount, precision: 2) %></th>
	</tr>
<% end %>
</tbody>

</table>
