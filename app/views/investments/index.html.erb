<h1><%= @title %></h1>

<table class='table-bordered table-striped'>

<thead>
<tr>
<th>Account</th>
<th>Type</th>
<th>Value</th>
<th>Details</th>
</tr>
</thead>

<tbody>
<% @accounts.each do |id, values| %>
	<tr>
	<td><%= values['account'] %>
	<td><%= values['type'] %>
	<td><%= values['value'] %>
	<td><%= link_to 'Details', investment_path(id: id) %>
	</tr>
<% end %>
</tbody>

</table>
