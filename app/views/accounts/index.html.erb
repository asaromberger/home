<h1><%= @title %></h1>

<%= link_to 'New Account', new_account_path %>

<div class='clearfix'><p>&nbsp;</p></div>

<table class='table table-bordered table-striped'>

<thead>
<tr>
<th>Account Name</th>
<th>Account Type</th>
<th>Edit</th>
<th>Delete</th>
</tr>
</thead>

<tbody>
<% @accounts.each do |account| %>
	<tr>
	<td><%= account.account %></td>
	<td><%= account.atype %></td>
	<td><%= link_to 'Edit', edit_account_path(account.id) %></td>
	<td><%= link_to 'Delete', account_path(account.id), method: :delete, data: {confirm: "Delete #{account.account}?"} %></td>
	</tr>
<% end %>
</tbody>

</table>

